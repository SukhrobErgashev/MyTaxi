<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyTaxi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSizePercent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="TabLayoutFont" parent="Widget.MaterialComponents.TabLayout">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@drawable/selector_text_color</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="SplashScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>